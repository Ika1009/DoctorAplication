<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.RegisterPage"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Register a New Account" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Button Text="Register" Clicked="OnRegisterClicked" />

            <Button Text="Back to Login"
                    Clicked="OnBackToLoginClicked"
                    HorizontalOptions="Center"
                    Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
