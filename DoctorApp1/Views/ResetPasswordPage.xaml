<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.ResetPasswordPage">
    
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Enter your registered email to reset your password." />
        <Entry x:Name="EmailEntry" Placeholder="Enter your email" Keyboard="Email" />
        <Button Text="Send Reset Token" Clicked="OnSendTokenClicked" />
        <Button Text="Back to Login" Clicked="OnBackToLoginClicked" />
    </StackLayout>
</ContentPage>
