<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.UserDashboardPage"
             BackgroundColor="#FAFBFF">

    <ScrollView>
        <StackLayout Padding="36,36,36,24" Spacing="24" HorizontalOptions="Center" WidthRequest="640">
            <Label Text="User Dashboard"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1976D2"
                   HorizontalOptions="Center"
                   Margin="0,0,0,12"/>

            <Frame BackgroundColor="White"
                   CornerRadius="18"
                   Padding="0"
                   Margin="0"
                   HasShadow="True"
                   BorderColor="#E0E2EA"
                   HorizontalOptions="Center"
                   WidthRequest="600">
                <StackLayout Padding="20,18,20,18" Spacing="18">
                    <Label Text="Change Password"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1A1A1A"
                           Margin="0,0,0,16"/>

                    <Grid ColumnDefinitions="180,*"
                          RowDefinitions="Auto,Auto,Auto"
                          BackgroundColor="Transparent"
                          Padding="0"
                          RowSpacing="0">
                        <Label Text="Current Password"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#1A1A1A"
                               Padding="0,12"
                               VerticalOptions="Center"
                               Grid.Row="0" Grid.Column="0"/>
                        <Entry x:Name="CurrentPasswordEntry"
                               Placeholder="Current Password"
                               IsPassword="True"
                               FontSize="17"
                               BackgroundColor="#F7FAFA"
                               TextColor="#222"
                               HeightRequest="40"
                               WidthRequest="260"
                               PlaceholderColor="#A0A0A0"
                               Margin="0,6,0,6"
                               VerticalOptions="Center"
                               Grid.Row="0" Grid.Column="1"/>

                        <Label Text="New Password"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#1A1A1A"
                               Padding="0,12"
                               VerticalOptions="Center"
                               Grid.Row="1" Grid.Column="0"/>
                        <Entry x:Name="NewPasswordEntry"
                               Placeholder="New Password"
                               IsPassword="True"
                               FontSize="17"
                               BackgroundColor="#F7FAFA"
                               TextColor="#222"
                               HeightRequest="40"
                               WidthRequest="260"
                               PlaceholderColor="#A0A0A0"
                               Margin="0,6,0,6"
                               VerticalOptions="Center"
                               Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Confirm New Password"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#1A1A1A"
                               Padding="0,12"
                               VerticalOptions="Center"
                               Grid.Row="2" Grid.Column="0"/>
                        <Entry x:Name="ConfirmNewPasswordEntry"
                               Placeholder="Confirm New Password"
                               IsPassword="True"
                               FontSize="17"
                               BackgroundColor="#F7FAFA"
                               TextColor="#222"
                               HeightRequest="40"
                               WidthRequest="260"
                               PlaceholderColor="#A0A0A0"
                               Margin="0,6,0,6"
                               VerticalOptions="Center"
                               Grid.Row="2" Grid.Column="1"/>
                    </Grid>
                    <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
                        <Button Text="Change Password"
                                Clicked="OnChangePasswordClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="6"
                                HeightRequest="44"
                                WidthRequest="150"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Account Management Section -->
            <Frame BackgroundColor="White"
                   CornerRadius="18"
                   Padding="0"
                   Margin="0"
                   HasShadow="True"
                   BorderColor="#E0E2EA"
                   HorizontalOptions="Center"
                   WidthRequest="600">
                <StackLayout Padding="20,18,20,18" Spacing="18">
                    <Label Text="Account Management"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1A1A1A"
                           Margin="0,0,0,16"/>
                    <Button Text="Delete Account"
                            BackgroundColor="#FF5252"
                            TextColor="White"
                            CornerRadius="6"
                            HeightRequest="44"
                            WidthRequest="180"
                            Clicked="OnDeleteAccountClicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>