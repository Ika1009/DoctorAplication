<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.UserDashboardPage"
             Title="My Account">
    <StackLayout Padding="20" Spacing="20">
        <Label Text="User Dashboard" FontSize="24" HorizontalOptions="Center" />

        <!-- Change Password Section -->
        <Label Text="Change Password" FontSize="18" />
        <Entry x:Name="CurrentPasswordEntry" Placeholder="Current Password" IsPassword="True" />
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />
        <Entry x:Name="ConfirmNewPasswordEntry" Placeholder="Confirm New Password" IsPassword="True" />
        <Button Text="Change Password" Clicked="OnChangePasswordClicked" />

        <!-- Delete Account Section -->
        <Label Text="Account Management" FontSize="18" />
        <Button Text="Delete Account" BackgroundColor="Red" TextColor="White" Clicked="OnDeleteAccountClicked" />
    </StackLayout>
</ContentPage>